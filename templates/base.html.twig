<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="container">
        <header class="row navbar navbar-fixed-top">
            <div class="container">
                <nav class="navbar navbar-inverse" role="navigation">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="oNavigation">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("GRC Evo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                            <!-- Ventes -->
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Ventes <b class="caret"></b> </a>
                                <ul class="dropdown-menu">
                                    <li class="dropdown-submenu">
                                        <a tabindex="-1" href="#">Documents de ventes</a>
                                        <ul class="dropdown-menu">
                                            <li>@Html.ActionLink("Devis", "Devis", "Ventes")</li>
                                            <li class="disabled">@Html.ActionLink("Commandes", "Commandes", "Ventes")</li>
                                            <li class="disabled">@Html.ActionLink("Factures", "Factures", "Ventes")</li>
                                            <li class="disabled"><a href="#">Règlements</a></li>
                                            <li role="separator" class="divider"></li>
                                            <li class="disabled"><a href="#">Tickets</a></li>
                                            <li role="separator" class="divider"></li>
                                            <li>@Html.ActionLink("Clients", "Index", "Clients")</li>
                                        </ul>
                                    </li>
                                    <li class="dropdown-submenu">
                                        <a tabindex="-1" href="#">Clients</a>
                                        <ul class="dropdown-menu">
                                            <li>@Html.ActionLink("Prospects", "Prospects", "Clients")</li>
                                            <li>@Html.ActionLink("Clients", "Index", "Clients")</li>
                                            <li><a href="#">Contacts</a></li>
                                            <li role="separator" class="divider"></li>
                                            <li><a href="#">Familles clients/prospects</a></li>
                                            <li><a href="#">Sous-familles clients/prospects</a></li>
                                            <li role="separator" class="divider"></li>
                                            <li><a href="#">Historique clients/articles</a></li>
                                            <li><a href="#">Statistiques</a></li>
                                        </ul>
                                    </li>
                                    <li class="dropdown-submenu">
                                        <a tabindex="-1" href="#">Règlements</a>
                                        <ul class="dropdown-menu">
                                            <li><a href="#">Echéancier</a></li>
                                            <li><a href="#">Règlements</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </li>
                            <!-- Règlements -->
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Règlements <b class="caret"></b> </a>
                                <ul class="dropdown-menu">
                                    <li class="dropdown-submenu">
                                        <a tabindex="-1" href="#">Clients</a>
                                        <ul class="dropdown-menu">
                                            <li><a href="#">Echéancier</a></li>
                                            <li><a href="#">Règlements</a></li>
                                        </ul>
                                    </li>
                                    <li class="dropdown-submenu">
                                        <a tabindex="-1" href="#">Fournisseurs</a>
                                        <ul class="dropdown-menu">
                                            <li><a href="#">Echéancier</a></li>
                                            <li><a href="#">Règlements</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </li>
                            <!-- Achats -->
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Achats <b class="caret"></b> </a>
                                <ul class="dropdown-menu">
                                    <li class="dropdown-submenu">
                                        <a tabindex="-1" href="#">Documents d'achats</a>
                                        <ul class="dropdown-menu">
                                            <li><a href="#">Demandes de prix</a></li>
                                            <li><a href="#">Commandes</a></li>
                                            <li><a href="#">Bons de réception</a></li>
                                            <li><a href="#">Bons de retour</a></li>
                                            <li>@Html.ActionLink("Factures", "Factures", "Achats")</li>
                                            <li><a href="#">Avoirs</a></li>
                                            <li><a href="#">Factures d'acomptes</a></li>
                                            <li><a href="#">Factures d'avoirs</a></li>
                                        </ul>
                                    </li>
                                    <li class="dropdown-submenu">
                                        <a tabindex="-1" href="#">Fournisseurs</a>
                                        <ul class="dropdown-menu">
                                            <li><a href="#">Fournisseurs</a></li>
                                            <li><a href="#">Contacts</a></li>
                                            <li role="separator" class="divider"></li>
                                            <li><a href="#">Familles fournisseurs</a></li>
                                            <li><a href="#">Sous-familles fournisseurs</a></li>
                                            <li role="separator" class="divider"></li>
                                            <li><a href="#">Historique fournisseurs/articles</a></li>
                                            <li><a href="#">Statistiques</a></li>
                                        </ul>
                                    </li>
                                    <li class="dropdown-submenu">
                                        <a tabindex="-1" href="#">Règlements</a>
                                        <ul class="dropdown-menu">
                                            <li><a href="#">Echéancier</a></li>
                                            <li><a href="#">Règlements</a></li>
                                            <li><a href="#">Décaissements</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </li>
                            <!-- Stocks / Articles -->
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Stocks / Articles <b class="caret"></b> </a>
                                <ul class="dropdown-menu">
                                    <li class="dropdown-submenu">
                                        <a tabindex="-1" href="#">Documents de stock</a>
                                        <ul class="dropdown-menu">
                                            <li><a href="#">Bons d'entrée</a></li>
                                            <li><a href="#">Bons de sortie</a></li>
                                            <li><a href="#">Inventaires</a></li>
                                        </ul>
                                    </li>
                                    <li class="dropdown-submenu">
                                        <a tabindex="-1" href="#">Articles</a>
                                        <ul class="dropdown-menu">
                                            <li><a href="#">Articles</a></li>
                                            <li><a href="#">Familles d'articles</a></li>
                                            <li><a href="#">Sous-familles d'articles</a></li>
                                            <li role="separator" class="divider"></li>
                                            <li><a href="#">Historique Historique clients/articles</a></li>
                                            <li><a href="#">Historique fournisseurs/articles</a></li>
                                            <li><a href="#">Statistiques</a></li>
                                        </ul>
                                    </li>
                                    <li class="dropdown-submenu">
                                        <a tabindex="-1" href="#">Tarifs clients</a>
                                        <ul class="dropdown-menu">
                                            <li><a href="#">Tarifs et promotions clients</a></li>
                                            <li><a href="#">Catégories tarifaires clients</a></li>
                                        </ul>
                                    </li>
                                    <li class="dropdown-submenu">
                                        <a tabindex="1" href="#">Tarifs fournisseurs</a>
                                        <ul class="dropdown-menu">
                                            <li><a href="#">Tarifs et promotions fournisseurs</a></li>
                                            <li><a href="#">Catégories tarifaires fournisseurs</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </li>


                            <!-- Paramètres -->
                            <li><a href="#">Paramètres</a></li>

                        </ul>
                    </div>
                </nav>
            </div>
        </header>





        <div class="row">
            <section class="col-lg-12">
                <div class="col-lg-12 body-content container">
                    {% block body %}{% endblock %}
                </div>
            </section>
        </div>
        
    </div>


        

<footer class="row">
            <div class="col-lg-12">
                <hr />
                <p>&copy; @DateTime.Now.Year - GRC Evo</p>
            </div>
        </footer>


        {% block javascripts %}{% endblock %}
    </body>
</html>
